<section class="admin-products-new">

  <header class="page-header">
    <h1>Sessions &raquo; Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
    <div class="form-group">
    <%= form_tag '/login' do %>

      Email: <%= text_field_tag :email, "", id: 'email', class: 'form-control' %>
      Password: <%= password_field_tag :password, "", id: 'password', class: 'form-control' %>
      <%= submit_tag "Submit", class: 'btn btn-primary' %>
    
    <% end %>
    </div>
    </div>
  </div>

</section>